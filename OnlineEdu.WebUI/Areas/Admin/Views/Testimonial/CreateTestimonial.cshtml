@model CreateTestimonialDto
@{
    ViewData["Title"] = "Yeni Referans Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">

    <label>Ad Soyad</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Unvan</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    <br />
    <label>Yorum</label>
    <textarea type="text" asp-for="Comment" class="form-control" rows="3" ></textarea>
    <span asp-validation-for="Comment" class="text-danger"></span>
    <br />
    <label>Puan (5 üzerinden)</label>
    <input type="number" asp-for="Star" class="form-control" />
    <span asp-validation-for="Star" class="text-danger"></span>
    <br />

    <button class="btn btn-outline-primary">Kaydet</button>
</form>

