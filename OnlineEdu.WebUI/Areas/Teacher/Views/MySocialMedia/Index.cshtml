
@model List<ResultTeacherSocialDto>
@{
    ViewData["Title"] = "Sosyal Medyalarım";
    Layout = "~/Areas/Teacher/Views/TeacherLayout/Index.cshtml";
}

@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Sosyal Medya</th>
        

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><a href="@item.Url" target="_blank" > <i class="@item.Icon"></i> @item.SocialMediaName </a>  </td>
           
            <td>
                <button onclick="deleteMySocial(@item.TeacherSocialId)" class="btn btn-outline-danger">Sil</button>
                <a asp-action="UpdateTeacherSocial" asp-controller="MySocialMedia" asp-area="Teacher" asp-route-id="@item.TeacherSocialId" class="btn btn-outline-info">Güncelle</a>


            </td>
        </tr>
    }
</table>

<br />
<a asp-action="CreateTeacherSocial" asp-controller="MySocialMedia" asp-area="Teacher" class="btn btn-outline-primary">Yeni Sosyal Medya Ekle</a>

<script>

    function deleteMySocial(id) {



        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = "/Teacher/MySocialMedia/DeleteTeacherSocial/" + id;

            }
        });

    }

</script>



